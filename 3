#include<stdio.h>
#include<stdlib.h>
#define max 20

int s[max],top=-1,ch,i,temp,elem;

void push( );
void pop( );
void palindrome( );
void display( );

void main( )
{
 while(1)
  	{
  	  printf("\n \n Stack operations\n 1:Push\n 2:pop\n 3:Palindrome\n 4:display\n 5:exit\n");
  	  printf("Enter choice \n");
   	 scanf("%d",&ch);
  	  switch(ch)
   	       {
   		 case 1:push( );
                                 break;
      		 case 2:pop( );
           		  break;
     		 case 3:palindrome( );
          			 break;
    		case 4:display( );
            		 break;
    		case 5:exit(0);
    	       }
 	}
 }





void push( )
{
 printf("Enter the element to be inserted\n");
 scanf("%d",&elem);
 if(top==max-1)
   printf("Stack overflow\n");
 else
   s[++top]=elem;
}

void pop( )
{
 if(top==-1)
   printf("Stack underflow\n");
 else
   top--;
}
void palindrome( )
{
    printf("Enter a number to check palindrome \n");
    scanf("%d",&elem);
    top=-1;  
    temp=elem;
     while(temp)
         {
           s[++top]=temp%10;
          temp=temp/10;
         }
  temp=elem;
  while(temp)
       {
          if(s[top--]!=(temp%10))
           {
             printf("It is not palindrome\n");
             return;
           }
        temp=temp/10;
      }
     printf("It is palindrome\n");
}

void display( )
{
  printf("stack elements are \n");
  for(i=0;i<=top;i++)
  printf("%d\t",s[i]);
}

